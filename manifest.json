{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "icons/icon_1.png"
  },

  "permissions": [
    "https://api.github.com/"
  ],

  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "js": ["gitlines.js"]
    }
  ]
}